{
  "compilerOptions": {
    "target": "es2020",                                  
    "lib": ["es2020"],                                      
    "rootDir": "src",                                    
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true,
    "moduleResolution": "node"                          
  }
}
